<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin Dashboard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    @RenderSection("Scripts", required: false)
    <style>
        body {
            font-family: Arial, sans-serif; /* Đặt font mặc định cho toàn bộ trang */
            background-color: #e9ecef; /* Màu nền cho body */
        }

        .sidebar {
            height: 100vh; /* Full-height sidebar */
            background-color: #f8f9fa; /* Light gray background */
            padding: 20px; /* Thêm khoảng cách bên trong */
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1); /* Thêm bóng cho sidebar */
        }

            .sidebar h3 {
                margin-bottom: 20px; /* Khoảng cách dưới tiêu đề */
                font-weight: bold; /* Đậm chữ */
            }

        .nav-link {
            padding: 10px 15px; /* Khoảng cách cho các liên kết điều hướng */
            border-radius: 5px; /* Bo góc liên kết */
            transition: background-color 0.3s; /* Hiệu ứng chuyển màu */
        }

            .nav-link:hover {
                background-color: #007bff; /* Màu nền khi hover */
                color: white; /* Màu chữ khi hover */
            }

        main {
            padding: 20px; /* Thêm khoảng cách cho phần nội dung chính */
            background-color: white; /* Màu nền trắng cho phần nội dung chính */
            border-radius: 5px; /* Bo góc cho phần nội dung chính */
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Thêm bóng cho phần nội dung chính */
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <aside class="col-md-2 sidebar">
                <h3>
                    <a href="@Url.Action("Index", "Home")" class="text-dark text-decoration-none">Admin Dashboard</a>
                </h3>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Products" asp-action="Index">Manage Products</a>
                    </li>
                </ul>
            </aside>
            <main class="col-md-10">
                <div class="p-3">
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>
</body>
</html>
